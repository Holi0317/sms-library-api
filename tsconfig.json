{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES6",
    "module": "commonjs",
    "noResolve": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "custom-typings/*.d.ts"
  ]
}
